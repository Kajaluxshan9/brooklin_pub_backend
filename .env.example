# Environment variables example
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_NAME=brooklinpubfinaldb

# JWT Configuration (Token valid for 1 hour)
JWT_SECRET=your-jwt-secret-key-change-in-production-use-strong-random-string
JWT_EXPIRES_IN=1h

# Security Configuration
BCRYPT_SALT_ROUNDS=12
COOKIE_MAX_AGE=3600000

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=ap-south-1
AWS_S3_BUCKET_NAME=your-bucket-name

# Super Admin Configuration (created on first startup)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!
SUPER_ADMIN_FIRST_NAME=Admin
SUPER_ADMIN_LAST_NAME=User